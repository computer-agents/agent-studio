FROM dorowu/ubuntu-desktop-lxde-vnc:latest

# Install Python 3.11
RUN wget -q -O - https://dl.google.com/linux/linux_signing_key.pub | sudo apt-key add - \
    && wget -q https://packages.microsoft.com/keys/microsoft.asc -O- | sudo apt-key add -
RUN apt update \
    && add-apt-repository ppa:deadsnakes/ppa \
    && add-apt-repository "deb [arch=amd64] https://packages.microsoft.com/repos/vscode stable main" \
    && apt update \
    && apt install -y --no-install-recommends --allow-unauthenticated python3.11 build-essential python3.11-dev python3.11-tk libevdev-dev software-properties-common apt-transport-https \
    && apt install -y --no-install-recommends --allow-unauthenticated code telegram-desktop \
    && apt autoclean -y \
    && apt autoremove -y \
    && rm -rf /var/lib/apt/lists/*

# Download get-pip.py and install pip for Python 3.11
RUN wget https://bootstrap.pypa.io/get-pip.py \
    && python3.11 get-pip.py \
    && python3.11 -m pip install --upgrade pip

# Create a non-root user
RUN useradd -m ubuntu

# Change ownership of the playground directory
RUN mkdir -p /home/ubuntu/playground
COPY playground /home/ubuntu/playground/playground
ADD scripts/agent_server.py /home/ubuntu/playground/scripts/agent_server.py
ADD pyproject.toml /home/ubuntu/playground/pyproject.toml
ADD requirements_linux.txt /home/ubuntu/playground/requirements_linux.txt
ADD scripts/docker_startup.sh /home/ubuntu/playground/scripts/docker_startup.sh
RUN chown -R ubuntu:ubuntu /home/ubuntu

WORKDIR /home/ubuntu/playground
RUN python3.11 -m pip install -e .
RUN python3.11 -m pip install -r requirements_linux.txt
RUN chmod +x /home/ubuntu/playground/scripts/docker_startup.sh
USER root
ENTRYPOINT ["/home/ubuntu/playground/scripts/docker_startup.sh"]
