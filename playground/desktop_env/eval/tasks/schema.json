{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "type": "object",
    "additionalProperties": false,
    "required": ["environments", "tasks"],
    "properties": {
        "environments": {
            "type": "array",
            "items": {
                "type": "string"
            }
        },
        "action_sequence_path": {
            "type": ["string"]
        },
        "tasks": {
            "type": "array",
            "items": {
                "type": "object",
                "additionalProperties": false,
                "required": ["task_id", "evals", "intent_template", "instantiation_dict"],
                "properties": {
                    "task_id": {
                        "type": "integer"
                    },
                    "intent_template": {
                        "type": ["string"]
                    },
                    "instantiation_dict": {
                        "type": ["object"]
                    },
                    "evals": {
                        "type": "array",
                        "items": {
                            "type": "object",
                            "additionalProperties": false,
                            "anyOf": [
                                {"required": ["eval_type", "eval_procedure"]},
                                {"required": ["eval_type", "reset_procedure"]}
                            ],
                            "properties": {
                                "eval_type": {
                                    "type": "string"
                                },
                                "eval_procedure": {
                                    "type": ["object", "null"]
                                },
                                "reset_procedure": {
                                    "type": ["array", "null"],
                                    "items": {
                                        "type": "object"
                                    }
                                }
                            }
                        }
                    }
                }
            }
        }
    }
}
