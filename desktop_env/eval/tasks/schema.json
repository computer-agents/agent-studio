{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "type": "object",
    "additionalProperties": false,
    "required": ["environments", "tasks"],
    "properties": {
        "environments": {
            "type": "array",
            "items": {
                "type": "string"
            }
        },
        "tasks": {
            "type": "array",
            "items": {
                "type": "object",
                "additionalProperties": false,
                "required": ["task_id", "available_apis", "score", "reset", "evals", "intent_template"],
                "properties": {
                    "task_id": {
                        "type": "integer"
                    },
                    "available_apis": {
                        "type": "array",
                        "items": {
                            "type": "string"
                        }
                    },
                    "score": {
                        "type": "number"
                    },
                    "reset": {
                        "type": "array",
                        "items": {
                            "type": "string"
                        }
                    },
                    "intent_template": {
                        "type": ["string", "null"]
                    },
                    "instantiation_dict": {
                        "type": ["object", "null"]
                    },
                    "evals": {
                        "type": "array",
                        "items": {
                            "type": "object",
                            "additionalProperties": false,
                            "required": ["eval_type", "reference_answers"],
                            "properties": {
                                "eval_type": {
                                    "type": "string"
                                },
                                "reference_answers": {
                                    "type": "object"
                                }
                            }
                        }
                    },
                    "reference_action_sequence": {
                        "type": ["object", "null"],
                        "properties": {
                            "action_sequence": {
                                "type": "array"
                            }
                        }
                    },
                    "reset_actions": {
                        "type": ["object", "null"],
                        "additionalProperties": {
                            "type": "array",
                            "items": {
                                "type": "object"
                            }
                        }
                    }
                }
            }
        }
    }
}
