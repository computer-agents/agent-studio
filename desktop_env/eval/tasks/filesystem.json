{
    "environments": ["filesystem"],
    "action_sequence_path": "data/filesystem.json",
    "tasks": [
        {
            "task_id": 0,
            "intent_template": "Create a file named '{file}' in the folder '{folder}' with the content '{content}' and set the permissions of the file to '{file_permission}' and the permissions of the folder to '{folder_permission}'.",
            "instantiation_dict": {
                "folder": "tmp",
                "folder_permission": "0o775",
                "file": "test.txt",
                "file_permission": "0o644",
                "content": "Hello World!"
            },
            "evals": [
                {
                    "eval_type": "filesystem",
                    "eval_procedure": {
                        "exists": {
                            "tmp/test.txt": true,
                            "tmp": true
                        },
                        "type_check": {
                            "tmp/test.txt": "file",
                            "tmp": "folder"
                        },
                        "permissions_check": {
                            "tmp/test.txt": "-rw-r--r--",
                            "tmp": "0o775"
                        },
                        "content_check": {
                            "tmp/test.txt": "Hello World!"
                        }
                    },
                    "reset_procedure": [
                        {
                            "rmdir": {
                                "path": "tmp"
                            }
                        }
                    ]
                }
            ]
        },
        {
            "task_id": 1,
            "intent_template": "Remove the file named '{file}' in the folder '{folder}'.",
            "instantiation_dict": {
                "folder": "tmp",
                "file": "test.txt"
            },
            "evals": [
                {
                    "eval_type": "filesystem",
                    "eval_procedure": {
                        "exists": {
                            "tmp": true
                        },
                        "type_check": {
                            "tmp": "folder"
                        }
                    },
                    "reset_procedure": [
                        {
                            "rmdir": {
                                "path": "tmp"
                            }
                        },
                        {
                            "mkdir": {
                                "path": "tmp"
                            }
                        },
                        {
                            "create_file": {
                                "path": "tmp/test.txt"
                            }
                        }
                    ]
                }
            ]
        },
        {
            "task_id": 2,
            "intent_template": "Remove the folder named '{folder}'.",
            "instantiation_dict": {
                "folder": "tmp"
            },
            "evals": [
                {
                    "eval_type": "filesystem",
                    "eval_procedure": {
                        "exists": {
                            "tmp": false
                        }
                    },
                    "reset_procedure": [
                        {
                            "rmdir": {
                                "path": "tmp"
                            }
                        },
                        {
                            "mkdir": {
                                "path": "tmp"
                            }
                        }
                    ]
                }
            ]
        },
        {
            "task_id": 3,
            "intent_template": "Save the string '{content}' to a file named '{file}' in the folder '{folder}'.",
            "instantiation_dict": {
                "folder": "tmp",
                "file": "test.txt",
                "content": "Hello World!"
            },
            "evals": [
                {
                    "eval_type": "filesystem",
                    "eval_procedure": {
                        "exists": {
                            "tmp/test.txt": true,
                            "tmp": true
                        },
                        "type_check": {
                            "tmp/test.txt": "file",
                            "tmp": "folder"
                        },
                        "content_check": {
                            "tmp/test.txt": "Hello World!"
                        }
                    },
                    "reset_procedure": [
                        {
                            "rmdir": {
                                "path": "tmp"
                            }
                        },
                        {
                            "mkdir": {
                                "path": "tmp"
                            }
                        }
                    ]
                }
            ]
        }
    ]
}
