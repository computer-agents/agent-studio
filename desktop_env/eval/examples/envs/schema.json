{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "type": "object",
    "additionalProperties": false,
    "required": ["applications", "applications_settings", "intent", "environments"],
    "properties": {
        "applications": {
            "type": "array",
            "items": {
                "type": "string"
            }
        },
        "applications_settings": {
            "type": "object"
        },
        "intent": {
            "type": "string"
        },
        "environments": {
            "type": "object",
            "additionalProperties": {
                "type": "object",
                "additionalProperties": false,
                "properties": {
                    "enter": {
                        "type": "array",
                        "items": {
                            "type": "object"
                        }
                    },
                    "exit": {
                        "type": "array",
                        "items": {
                            "type": "object"
                        }
                    }
                }
            }
        }
    }
}
